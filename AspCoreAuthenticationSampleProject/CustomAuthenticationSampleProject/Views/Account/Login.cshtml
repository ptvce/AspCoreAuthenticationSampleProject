@model CustomAuthenticationSampleProject.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sample Portal</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/css/views/login.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="wrapper fadeInDown">
        <div id="formContent">
            <!-- Tabs Titles -->
            <!-- Icon -->
            <div class="fadeIn first">
                <img src="https://www.b-cube.in/wp-content/uploads/2014/05/aditya-300x177.jpg" id="icon" alt="User Icon" />
                <h1>Sample Portal</h1>
            </div>

            <!-- Login Form -->
            <form method="post">
                <input asp-for="@Model.UserName" id="login" class="fadeIn second" placeholder="username" />
                <input asp-for="@Model.Password" id="password" class="fadeIn third" placeholder="password" type="password" />

                <input type="submit" class="fadeIn fourth" value="Log In">
            </form>

            <!-- Remind Passowrd -->
            <div id="formFooter">
                <a class="underlineHover" href="/Home/Privacy">Go to the Site</a>
            </div>
            <div id="formFooter">
                <a class="underlineHover" href="/Account/Register">Go Register</a>
            </div>

        </div>
    </div>
</body>
</html>
